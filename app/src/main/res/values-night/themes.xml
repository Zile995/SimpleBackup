<resources>
    <!-- Base application theme. -->
    <style name="Theme.SimpleBackup" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/bottom_view</item>
        <item name="colorPrimaryVariant">@color/main_background</item>
        <item name="colorOnPrimary">@color/selectedTab</item>
        <item name="colorSurface">@color/card_view</item>
        <item name="colorSurfaceVariant">@color/switch_disabled</item>
        <item name="colorOnSurface">@color/primary_text</item>
        <item name="colorOnSurfaceVariant">@color/bottom_label_inactive</item>
        <item name="colorPrimaryContainer">?attr/colorOnPrimary</item>
        <item name="colorOnPrimaryContainer">?attr/colorPrimaryVariant</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="colorError">@color/error</item>
        <item name="colorOutline">@color/outline</item>
        <!-- Used for material3 navigation bar color -->
        <item name="colorSecondaryContainer">@color/search_bar</item>
        <item name="colorOnSecondaryContainer">@color/selectedTab</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/scroll_bar</item>
        <item name="colorSecondaryVariant">@color/main_background</item>
        <item name="colorOnSecondary">@color/selectedTab</item>
        <item name="android:textColorSecondary">@color/primary_text</item>
        <item name="android:statusBarColor">@color/bottom_view</item>
        <item name="android:navigationBarColor">@color/bottom_view</item>
        <item name="android:windowBackground">@drawable/starting_screen</item>
        <item name="searchViewStyle">@style/Widget.SimpleBackup.MaterialSearchView</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>
</resources>