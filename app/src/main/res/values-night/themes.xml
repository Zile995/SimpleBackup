<resources>

    <!-- Base application theme. -->
    <style name="Theme.SimpleBackup" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/bottomView</item>
        <item name="colorPrimaryVariant">@color/background</item>
        <item name="colorOnPrimary">@color/selectedTab</item>
        <item name="colorSurface">@color/cardView</item>
        <item name="colorSurfaceVariant">@color/switchDisabled</item>
        <item name="colorOnSurface">@color/textColorPrimary</item>
        <item name="colorOnSurfaceVariant">@color/bottomLabelInactive</item>
        <item name="colorPrimaryContainer">?attr/colorOnPrimary</item>
        <item name="colorOnPrimaryContainer">?attr/colorPrimaryVariant</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="colorError">@color/error</item>
        <item name="colorOutline">@color/outline</item>
        <!-- Used for material3 navigation bar color -->
        <item name="colorSecondaryContainer">@color/searchBar</item>
        <item name="colorOnSecondaryContainer">@color/selectedTab</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/scrollBar</item>
        <item name="colorSecondaryVariant">@color/background</item>
        <item name="colorOnSecondary">@color/selectedTab</item>
        <item name="android:textColorSecondary">@color/textColorPrimary</item>
        <item name="android:statusBarColor" >@color/bottomView</item>
        <item name="android:navigationBarColor">@color/bottomView</item>
        <item name="android:windowBackground">@drawable/starting_screen</item>
        <item name="searchViewStyle">@style/Widget.SimpleBackup.MaterialSearchView</item>
    </style>

    <style name="Widget.SimpleBackup.Chip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="android:textSize">9sp</item>
        <item name="strokeWidth">0dp</item>
        <item name="cornerSize">100%</item>
        <item name="fontFamily">@font/inter_family</item>
        <item name="android:fontFamily">@font/inter_family</item>
    </style>

    <style name="TextAppearance.SimpleBackup.NavigationBar" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/inter_family</item>
        <item name="android:fontFamily">@font/inter_family</item>
    </style>

    <style name="Widget.SimpleBackup.NavigationBar" parent="Widget.Material3.BottomNavigationView">
        <item name="itemTextAppearanceInactive">
            @style/TextAppearance.SimpleBackup.NavigationBar
        </item>
        <item name="itemTextAppearanceActive">
            @style/TextAppearance.SimpleBackup.NavigationBar
        </item>
    </style>

    <style name="ShapeAppearanceOverlay.SimpleBackup.ImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="backgroundTint">@color/blueChip</item>
    </style>

    <style name="TextAppearance.SimpleBackup.TitleSmall" parent="TextAppearance.Material3.TitleSmall">
        <item name="fontFamily">@font/inter_family</item>
        <item name="android:fontFamily">@font/inter_family</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="TextAppearance.SimpleBackup.TitleMedium" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="fontFamily">@font/inter_family</item>
        <item name="android:fontFamily">@font/inter_family</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.SimpleBackup.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="fontFamily">@font/inter_family</item>
        <item name="android:fontFamily">@font/inter_family</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Widget.SimpleBackup.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">1dp</item>
        <item name="backgroundColor">@color/cardView</item>
        <item name="rippleColor">@color/cardViewRipple</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="Widget.SimpleBackup.SearchBar" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">30dp</item>
        <item name="cardElevation">2dp</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="Widget.SimpleBackup.MaterialSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:textColor">?android:textColorHint</item>
        <item name="searchHintIcon">@null</item>
        <item name="searchIcon">@null</item>
        <item name="queryHint">@string/search_for_apps</item>
        <item name="iconifiedByDefault">false</item>
        <item name="queryBackground">@null</item>
    </style>

    <style name="Widget.SimpleBackup.Button" parent="Widget.Material3.Button.TextButton">
        <item name="cornerRadius">4dp</item>
        <item name="backgroundTint">@color/button</item>
        <item name="android:textColor">@color/backupButtonText</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAlignment">center</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/localStorageIcon</item>
        <item name="fontFamily">@font/inter_family</item>
        <item name="android:fontFamily">@font/inter_family</item>
    </style>

    <style name="DialogTheme" parent="Theme.Material3.DayNight.Dialog.Alert">
        <!--        <item name="android:windowBackground">@drawable/dialog_style</item>-->
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:fontFamily">@font/inter_family</item>
    </style>
</resources>