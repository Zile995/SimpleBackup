<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_item"
    style="@style/Widget.SimpleBackup.CardView"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="0dp"
    android:checkable="false"
    android:clickable="false"
    android:longClickable="false"
    android:focusable="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <FrameLayout
            android:id="@+id/image_layout"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" >

            <ImageView
                android:id="@+id/application_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="bottom"
                android:contentDescription="@string/application_image" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/favorites_badge"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.SimpleBackup.ImageView"
                android:background="@color/primary_button_color"
                android:visibility="visible"
                android:scaleType="centerInside"
                android:tint="@color/button_text"
                app:srcCompat="@drawable/ic_favorite"
                android:layout_gravity="top|end" />

        </FrameLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/version_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:fontFamily="@font/inter_family"
            android:textColor="@color/secondary_text"
            android:textSize="6pt"
            app:layout_constraintBottom_toTopOf="@+id/application_name"
            app:layout_constraintStart_toEndOf="@+id/image_layout"
            app:layout_constraintTop_toTopOf="@+id/image_layout" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/application_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter"
            android:maxLines="1"
            android:textAlignment="textStart"
            android:textAppearance="?attr/textAppearanceBody1"
            android:textColor="@color/primary_text"
            android:textSize="7pt"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/package_name"
            app:layout_constraintStart_toStartOf="@+id/version_name"
            app:layout_constraintTop_toTopOf="@+id/version_name" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/package_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_family"
            android:textColor="@color/secondary_text"
            android:textSize="6pt"
            app:layout_constraintBottom_toBottomOf="@+id/image_layout"
            app:layout_constraintStart_toStartOf="@+id/application_name"
            app:layout_constraintTop_toBottomOf="@+id/application_name" />

        <com.google.android.material.chip.Chip
            android:id="@+id/split_apk"
            style="@style/Widget.SimpleBackup.Chip"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:clickable="false"
            android:fontFamily="@font/inter"
            android:textAlignment="center"
            android:textColor="@color/button_text"
            android:textSize="11sp"
            android:textStyle="bold"
            app:chipBackgroundColor="@color/primary_button_color"
            app:chipEndPadding="2dp"
            app:chipStartPadding="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/image_layout" />

        <com.google.android.material.chip.Chip
            android:id="@+id/apk_size"
            style="@style/Widget.SimpleBackup.Chip"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginEnd="6dp"
            android:clickable="false"
            android:fontFamily="@font/inter"
            android:textAlignment="center"
            android:textColor="@color/button_text"
            android:textSize="11sp"
            android:textStyle="bold"
            app:chipBackgroundColor="@color/primary_button_color"
            app:chipEndPadding="2dp"
            app:chipStartPadding="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>