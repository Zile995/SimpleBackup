<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkBackground"
    tools:context=".ui.activities.BackupActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_backup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/darkBottomView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextAppearance="@style/ToolBarFont"
        app:title="Backup" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_view"
        style="@style/Widget.SimpleBackup.CardView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="12dp"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="@color/darkCardView"
        app:cardCornerRadius="7dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_backup"
        app:rippleColor="@color/darkCardViewRipple">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_min_sdk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter"
                android:gravity="center_horizontal"
                android:maxLines="1"
                android:text="@string/min_sdk"
                android:textAppearance="?attr/textAppearanceBody1"
                android:textColor="@color/darkRedChipLabel"
                android:textSize="5pt"
                app:layout_constraintStart_toStartOf="@+id/text_target_sdk"
                app:layout_constraintTop_toBottomOf="@+id/target_sdk" />

            <ImageView
                android:id="@+id/application_image_backup"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="25dp"
                android:layout_marginTop="30dp"
                android:contentDescription="@string/application_image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_item_backup"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/inter"
                android:gravity="center_horizontal|center_vertical"
                android:maxLines="3"
                android:textAppearance="?attr/textAppearanceBody1"
                android:textColor="@color/darkAppNameLabel"
                android:textSize="6.3pt"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/application_image_backup"
                app:layout_constraintStart_toStartOf="@+id/application_image_backup"
                app:layout_constraintTop_toBottomOf="@+id/application_image_backup" />

            <com.google.android.material.chip.Chip
                android:id="@+id/apk_size"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_marginTop="-5dp"
                android:clickable="false"
                android:fontFamily="@font/inter"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textAlignment="textStart"
                android:textAppearance="@style/chipText"
                android:textColor="@color/darkTextInGreenChip"
                android:textSize="5.5pt"
                android:textStyle="bold"
                app:chipBackgroundColor="@color/darkGreenChip"
                app:chipIcon="@drawable/twotone_android_black_24dp"
                app:iconStartPadding="5dp"
                app:layout_constraintStart_toStartOf="@+id/text_apk_size"
                app:layout_constraintTop_toBottomOf="@+id/text_apk_size" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_target_sdk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter"
                android:gravity="center_horizontal"
                android:maxLines="1"
                android:text="@string/target_sdk"
                android:textAppearance="?attr/textAppearanceBody1"
                android:textColor="@color/darkRedChipLabel"
                android:textSize="5pt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/apk_size"
                app:layout_constraintTop_toTopOf="@+id/text_apk_size" />

            <com.google.android.material.chip.Chip
                android:id="@+id/data_size"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_marginTop="-5dp"
                android:clickable="false"
                android:fontFamily="@font/inter"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textAlignment="textStart"
                android:textAppearance="@style/chipText"
                android:textColor="@color/darkTextInGreenChip"
                android:textSize="5.5pt"
                android:textStyle="bold"
                app:chipBackgroundColor="@color/darkGreenChip"
                app:chipIcon="@drawable/twotone_sd_storage_black_24dp"
                app:chipIconSize="22dp"
                app:iconStartPadding="5dp"
                app:layout_constraintStart_toStartOf="@+id/text_data_size"
                app:layout_constraintTop_toBottomOf="@+id/text_data_size" />

            <com.google.android.material.chip.Chip
                android:id="@+id/target_sdk"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_marginTop="-5dp"
                android:clickable="false"
                android:fontFamily="@font/inter"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textAlignment="textStart"
                android:textAppearance="@style/chipText"
                android:textColor="@color/darkTextInRedChip"
                android:textSize="5.5pt"
                android:textStyle="bold"
                app:chipBackgroundColor="@color/darkRedChip"
                app:chipIcon="@drawable/twotone_api_black_24dp"
                app:chipIconSize="20dp"
                app:iconStartPadding="5dp"
                app:layout_constraintStart_toStartOf="@+id/text_target_sdk"
                app:layout_constraintTop_toBottomOf="@+id/text_target_sdk" />

            <com.google.android.material.chip.Chip
                android:id="@+id/min_sdk"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_marginTop="-5dp"
                android:clickable="false"
                android:fontFamily="@font/inter"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textAlignment="textStart"
                android:textAppearance="@style/chipText"
                android:textColor="@color/darkTextInRedChip"
                android:textSize="5.5pt"
                android:textStyle="bold"
                app:chipBackgroundColor="@color/darkRedChip"
                app:chipIcon="@drawable/twotone_api_black_24dp"
                app:chipIconSize="20dp"
                app:iconStartPadding="5dp"
                app:layout_constraintStart_toStartOf="@+id/text_min_sdk"
                app:layout_constraintTop_toBottomOf="@+id/text_min_sdk" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_apk_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="-5dp"
                android:fontFamily="@font/inter"
                android:gravity="center_horizontal"
                android:maxLines="1"
                android:text="@string/apk"
                android:textAppearance="?attr/textAppearanceBody1"
                android:textColor="@color/darkGreenChipLabel"
                android:textSize="5pt"
                app:layout_constraintStart_toEndOf="@+id/text_item_backup"
                app:layout_constraintTop_toTopOf="@+id/application_image_backup" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_data_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter"
                android:gravity="center_horizontal"
                android:maxLines="1"
                android:text="@string/data"
                android:textAppearance="?attr/textAppearanceBody1"
                android:textColor="@color/darkGreenChipLabel"
                android:textSize="5pt"
                app:layout_constraintStart_toStartOf="@+id/text_apk_size"
                app:layout_constraintTop_toBottomOf="@+id/apk_size" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_view_package"
        style="@style/Widget.SimpleBackup.CardView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="12dp"
        android:clickable="false"
        android:focusable="false"
        app:cardBackgroundColor="@color/darkCardView"
        app:cardCornerRadius="7dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_view"
        app:rippleColor="@color/darkCardViewRipple">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_view_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:fontFamily="@font/inter"
                android:gravity="center_horizontal"
                android:maxLines="1"
                android:text="@string/app_version"
                android:textAppearance="?attr/textAppearanceBody1"
                android:textColor="@color/textColorPrimary"
                android:textSize="6.8pt"
                app:layout_constraintBottom_toBottomOf="@+id/chip_version_backup"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/chip_version_backup" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_view_package"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/inter"
                android:gravity="center_horizontal"
                android:maxLines="1"
                android:text="@string/package_version"
                android:textAppearance="?attr/textAppearanceBody1"
                android:textColor="@color/textColorPrimary"
                android:textSize="6.8pt"
                app:layout_constraintStart_toStartOf="@+id/text_view_version"
                app:layout_constraintTop_toBottomOf="@id/text_view_version" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_view_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/inter"
                android:gravity="center_horizontal"
                android:maxLines="1"
                android:text="@string/data_in"
                android:textAppearance="?attr/textAppearanceBody1"
                android:textColor="@color/textColorPrimary"
                android:textSize="6.8pt"
                app:layout_constraintStart_toStartOf="@+id/text_view_version"
                app:layout_constraintTop_toBottomOf="@id/text_view_package" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_version_backup"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="10dp"
                android:clickable="false"
                android:fontFamily="@font/inter"
                android:textAlignment="center"
                android:textAppearance="@style/chipText"
                android:textColor="@color/textColorPrimary"
                android:textSize="5.3pt"
                android:textStyle="bold"
                app:chipBackgroundColor="@color/darkRedChip"
                app:layout_constraintStart_toEndOf="@id/text_view_version"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_package_backup"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:clickable="false"
                android:fontFamily="@font/inter"
                android:textAlignment="center"
                android:textAppearance="@style/chipText"
                android:textColor="@color/textColorPrimary"
                android:textSize="5pt"
                android:textStyle="bold"
                app:chipBackgroundColor="@color/darkRedChip"
                app:layout_constraintBottom_toBottomOf="@+id/text_view_package"
                app:layout_constraintStart_toStartOf="@+id/chip_version_backup"
                app:layout_constraintTop_toTopOf="@+id/text_view_package" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_dir_backup"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:clickable="false"
                android:fontFamily="@font/inter"
                android:textAlignment="center"
                android:textAppearance="@style/chipText"
                android:textColor="@color/textColorPrimary"
                android:textSize="5pt"
                android:textStyle="bold"
                app:chipBackgroundColor="@color/darkRedChip"
                app:layout_constraintBottom_toBottomOf="@id/text_view_data"
                app:layout_constraintStart_toStartOf="@+id/chip_package_backup"
                app:layout_constraintTop_toTopOf="@id/text_view_data" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="15dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/twotone_info_black_24dp"
                app:layout_constraintBottom_toBottomOf="@+id/chip_version_backup"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/chip_version_backup" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_view_buttons"
        style="@style/Widget.SimpleBackup.CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:clickable="false"
        android:focusable="false"
        app:cardBackgroundColor="@color/darkCardView"
        app:cardCornerRadius="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_view_package"
        app:rippleColor="@color/darkCardViewRipple">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/backup_button"
                style="@style/Widget.MaterialComponents.Button.Icon"
                android:layout_width="150dp"
                android:layout_height="55dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/inter"
                android:text="@string/local"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/darkBackupButtonText"
                android:textStyle="bold"
                app:backgroundTint="@color/darkButton"
                app:icon="@drawable/baseline_storage_orange_300_24dp"
                app:iconGravity="textStart"
                app:iconTint="@color/darkLocalStorageIcon"
                app:layout_constraintEnd_toStartOf="@id/backup_drive_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/backup_drive_button"
                android:layout_width="150dp"
                android:layout_height="55dp"
                android:fontFamily="@font/inter"
                android:text="@string/drive"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/darkBackupButtonText"
                android:textStyle="bold"
                app:backgroundTint="@color/darkButton"
                app:icon="@drawable/baseline_add_to_drive_yellow_300_24dp"
                app:iconGravity="textStart"
                app:iconTint="@color/darkDriveStorageIcon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/backup_button"
                app:layout_constraintTop_toTopOf="@+id/backup_button" />

            <ProgressBar
                android:id="@+id/progress_bar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginBottom="100dp"
                android:indeterminate="false"
                android:indeterminateTint="@color/darkFloatingButton"
                android:max="100"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/backup_button" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/floating_delete_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:src="@drawable/baseline_delete_black_24dp"
                app:backgroundTint="?attr/colorError"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>